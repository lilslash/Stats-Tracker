<div class="block">
    <div class="row">
        <div class="col-auto">
            <h2>Welcome, {{name}}!</h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Add New Stats</h3>

            <form class="form new-stats-form">
                <div class="form-group">
                    <div class="form-group">
                        <label for="game-name">Game:</label>
                        <select class="form-input" id="game-name" name="game-name">
                            <option value="None">Choose Game</option>
                            <option value="Apex">Apex</option>
                            <option value="Fortnite">Fortnite</option>
                            <option value="Hyperscape">Hyperscape</option>
                        </select>
                    </div>

                    {{!-- {{#if Apex}} --}}
                    <div id="showApex" style="display: block;">
                        {{> battle-r-profile}}
                    </div>

                    {{!-- {{else}} --}}
                    <div id="showFortnite" style="display: none;">
                        <div class="form-group">
                            <label for="Kills">Kills:</label>
                            <input class="form-input" type="number" id="fortnite-kills" name="fortnite-kills" />
                        </div>
                        <div class="form-group">
                            <label for="wins">Wins:</label>
                            <input class="form-input" type="number" id="fortnite-wins" name="fortnite-wins" />
                        </div>
                        <div class="form-group">
                            <label for="matches-played">Matches Played:</label>
                            <input class="form-input" type="number" id="fortnite-matches-played" name="fortnite-matches-played" />
                        </div>
                    </div>
                    {{!-- {{/if}} --}}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
            </form>
        </div>
    </div>

    {{#if battleRs.length}}
    <div class="statz col-md-6 stats-list">
        <h3>Current Stats:</h3>

        {{#each battleRs as |battle|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/battle-royale/">Game: {{battle.game_name}}</a></h4>
            </div>
            <div class="col-md-8">
                <h4><a href="/battle-royale/">Kills: {{battle.kills}}</a></h4>
            </div>
            <div class="col-md-8">
                <h4><a href="/battle-royale/">Wins: {{battle.wins}}</a></h4>
            </div>
            <div class="col-md-8">
                <h4><a href="/battle-royale/">Matches Played{{battle.matches_played}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{battle.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>