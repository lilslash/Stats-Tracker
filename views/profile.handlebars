<div class="block">
    <div class="row">
        <div class="col-auto">
            <h2>Welcome, {{name}}!</h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Add New Stats</h3>

            <form class="form new-stats-form">
                <div class="form-group">
                    <div class="form-group">
                        <label for="game-name">Game:</label>
                        <select class="form-input" id="game-name" name="game-name">
                            <option value="None">Choose Game</option>
                            <option value="Apex">Apex</option>
                            <option value="Fortnite">Fortnite</option>
                            <option value="Hyperscape">Hyperscape</option>
                            <option value="Halo">Halo</option>
                            <option value="CoD: Black Ops">Call of Duty: Black Ops</option>
                            <option value="Valorant">Valorant</option>
                        </select>
                    </div>
                    {{!-- Suggest display data based on game type vs game title --}}

                    <div id="showBattleR" style="display: none;">
                        {{> battle-r}}
                    </div>
                    <div id="showShooter" style="display: none;">
                        {{> shooter}}
                    </div>
                    <div id="showValorant" style="display: none;">
                        {{> valorant}}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
            </form>
        </div>
    </div>

    {{#if battleRs.length}}
    <div class="battle-r-statz col-md-6 stats-list">
        <h3>Stats:</h3>

        {{#each battleRs as |battle|}}
        <div class="battle-r-block row mb-2">
            <div class="col-md-4">
                <h4>Date: {{format_date date_created}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Game: {{battle.game_name}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Kills: {{battle.kills}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Wins: {{battle.wins}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Matches Played: {{battle.matches_played}}</h4>
            </div>
            <div class="col-md-4">
                <button class="battle-delete btn btn-sm btn-danger" data-id="{{battle.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}


    {{#if shooters.length}}
    <div class="shooter-statz col-md-6 stats-list">
        <h3>Stats:</h3>
        {{#each shooters as |shooter|}}
        <div class="shooter-block row mb-2">
            <div class="col-md-4">
                <h4>Date: {{format_date date_created}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Game: {{shooter.game_name}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Kills: {{shooter.kills}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Deaths: {{shooter.deaths}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Assists: {{shooter.assist}}</h4>
            </div>
            <div class="col-md-4">
                <h4>K/D: {{shooter.kd}}</h4>
            </div>
            <div class="col-md-4">
                <button class="shooter-delete btn btn-sm btn-danger" data-id="{{shooter.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if Valorants.length}}
    <div class="valorant-statz col-md-6 stats-list">
        <h3>Stats:</h3>
        {{#each Valorants as |fight|}}
        <div class="shooter-block row mb-2">
            <div class="col-md-4">
                <h4>Date: {{format_date date_created}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Game: {{fight.game_name}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Agent {{fight.character}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Kills: {{fight.kills}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Deaths: {{fight.deaths}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Assists: {{fight.assist}}</h4>
            </div>
            <div class="col-md-4">
                <h4>Game Count: {{fight.game_count}}</h4>
            </div>
            <div class="col-md-4">
                <button class="valorant-delete btn btn-sm btn-danger" data-id="{{fight.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

</div>

<script src="./js/profile.js"></script>