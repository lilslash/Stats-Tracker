  <link rel="stylesheet" href="/css/style.css">
  <title>Stat Trax</title>
</head>

<body>
  <div id="overlay"></div>
  <div class="flex-column justify-space-around">
    <header class="custom-header display-flex justify-space-between align-center p-2">

    </header>
    <nav>
      <!-- Conditionally render login or logout links -->
      {{#if logged_in}}
      <a href="/profile">profile</a> |
      <button class="no-button" id="logout">logout</button>
      {{else}}
      <a href="/login">login</a>
      {{/if}}
    </nav>
    <main>
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>

    <footer>
      <h3><a href="/request">We take requests</a></h3>
    </footer>

  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js" integrity="sha512-WFN04846sdKMIP5LKNphMaWzU7YpMyCU245etK3g/2ARYbPK9Ub18eG+ljU96qKRCWh+quCY7yefSmlkQw1ANQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>